{
  "version": 2,
  "name": "webtransport-chat-client",
  "builds": [
    {
      "src": "packages/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "cd packages/client && npm install && npm run build",
  "outputDirectory": "packages/client/dist",
  "installCommand": "npm install",
  "env": {
    "VITE_RENDER_SERVER_URL": "https://webtransport-1.onrender.com"
  }
}